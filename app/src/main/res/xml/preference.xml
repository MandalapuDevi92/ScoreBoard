<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="keyword_screen">

    <PreferenceCategory android:title="Game Settings" >

        <ListPreference android:title="@string/setscore_setting"
            android:summary="@string/setscore_def_setting"
            android:key="@string/setscore_key"
            android:defaultValue="1"
            android:entries="@array/setScoreArray"
            android:entryValues="@array/setScoreValues" />


        <ListPreference android:title="@string/handy_def_setting"
            android:summary="@string/handy_def_setting"
            android:key="@string/handyy_key"
            android:defaultValue="1"
            android:entries="@array/sethandyArray"
            android:entryValues="@array/setHandyValues" />
    </PreferenceCategory>
</PreferenceScreen>